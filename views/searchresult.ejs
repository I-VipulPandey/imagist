<%- include('./partials/header'); -%>


<% if(files.length>0){  %>

    <div class="title">
        <p>We found <%=files.length%> files matching your search query..üòÄ</p>
    </div>

    <div class="container"> 
          
<% files.flat().forEach(function(file,idx) { %>
          
        <div class="window">
          <a href="/pin/<%=file._id %>">
            <img class="foto" src="/image/<%=file.filename %>" />
          </a>
      
          <div class="hover-zone">
            <div class="top-bar">
             <p style="pointer-events: all" >Profile ‚åµ</p>

             <% if (user.saved.indexOf(file._id)!==-1) { %>
            <a  type="submit"
              id="save" class="save-btn"
              style="pointer-events: all; background-color: #5f5e5e; background: #5f5e5e"
              href="/save/pin/<%=file._id %>">Saved</a>
    
            <% } else{ %>
              
            <a class="save-btn" style="pointer-events:all;" id="save" href="/save/pin/<%=file._id %>">Save</a>
            <% } %>
      
                   </div>
            <!-------------------->
            <div class="bottom-bar">
              <% if(image[idx].link){ %>
                <div class="gayab">
                  <p>‚Üó <%=image[idx]?.link%></p>
                </div>
        
                <% } else { %>
                <div class="gayab"></div>
                <% } %>
      
              <div class="radius-ico">
                <a style="pointer-events: all;" title="Download image" href="/image/<%=file.filename%>" download="">
          
                  <img
                    src="https://cdn4.iconfinder.com/data/icons/navigation-40/24/download-128.png"
                  />
                </a>
                <img
                  src="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-more-256.png"
                />
              </div>
            </div>
          </div>
        </div>
<% })  %>

        
      </div>


<% } else {  %>
    <div class="title">
        <p>No files found... ‚òπÔ∏è</p><br>
    </div>
<% } %>

<%- include('./partials/footer'); -%>
